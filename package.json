{
  "name": "speech-therapy-monorepo",
  "private": true,
  "scripts": {
    "dev:frontend": "pnpm --filter @app/frontend dev",
    "dev:backend": "pnpm --filter @app/backend start:dev",
    "dev": "concurrently -n frontend,API -c blue,magenta \"pnpm dev:frontend\" \"pnpm dev:backend\"",
    "build": "pnpm -r build",
    "lint": "pnpm -r lint",
    "format": "prettier -w ."
  },
  "devDependencies": {
    "concurrently": "^9.0.0",
    "prettier": "^3.3.3",
    "typescript": "^5.6.3"
  }
}